<% layout ('layouts/boilerplate') %>
<body>
    <!-- <h3 class="mt-3 mb-3"> All Listings</h3> -->
     <style>
        #filters{
            margin-top: 1rem;
            display: flex;
        }
        .filter{
            text-align: center;
            margin-right: 2rem;
            opacity: 0.7;
        }
        .filter:hover{
            opacity: 1;
            cursor: pointer;
            transform: scale(1.1);
            transition: all 0.3s ease-in-out;
        }

        .filter p{
            font-size: 0.8rem;
        }
     </style>

    <div id="filters">
        <div class="filter">
            <i class="fa-solid fa-fire"></i>
            <p>Trending </p>
        </div>

        <div class="filter">
            <i class="fa-solid fa-bed"></i>
            <p>Rooms </p>
        </div>

        <div class="filter">
            <i class="fa-solid fa-mountain-city"></i>
            <p>Iconic cities </p>
        </div>

        <div class="filter">
            <i class="fa-solid fa-mountain"></i>
            <p>Mountains </p>
        </div>

        <div class="filter">
            <i class="fa-solid fa-person-swimming"></i>
            <p>Amazing pools </p>
        </div>

        <div class="filter">
            <i class="fa-solid fa-tree"></i>
            <p>Countryside </p>
        </div>

        <div class="filter">
            <i class="fa-solid fa-house"></i>
            <p>Farms </p>
        </div>

        <div class="filter">
            <i class="fa-brands fa-fort-awesome"></i>
            <p>Castles </p>
        </div>

        <div class="filter">
            <i class="fa-solid fa-campground"></i>
            <p>Camping </p>
        </div>

        <div class="filter">
            <i class="fa-solid fa-snowflake"></i>
            <p>Winter wonderlands </p>
        </div>

        <div class="filter">
            <i class="fa-solid fa-igloo"></i>
            <p>Unique stays </p>
        </div>

        <div class="filter">
            <i class="fa-solid fa-location-dot"></i>
            <p>Nearby </p>
        </div>

        <div class="filter">
            <i class="fa-solid fa-plus"></i>
            <p>More </p>
        </div>

        <div class="filter">
            <i class="fa-solid fa-sliders"></i>
            <p>Filters </p>
        </div>

        <div class="filter">
            <i class="fa-solid fa-sort"></i>
            <p>Sort </p>
        </div>
    </div>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
        <% for (let list of listings){ %>
            <a href="/listings/<%= list._id %>" class="text-decoration-none">
                <div class="card listing-card" >
                    <img src="<%= list.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text"> 
                        <b> <%=list.title %></b>   <br> &#8377;<%= list.price.toLocaleString("en-IN") %> /night </p>
                    </div>
                </div> 
            </a>
           
        <% } %>

    </div>
    
</body>
